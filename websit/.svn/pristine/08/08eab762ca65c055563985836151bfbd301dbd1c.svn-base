$(function() {
    // let num = $(".banner>img").length;
    var num = 0;
    $(".b-btn").on("click", ".button", function() {
        if (num < $(".banner>img").length - 1) {
            $(".banner>img").eq(num).animate({ "opacity": "0" }, 500);
            num++;
            if (num == $(".banner>img").length - 1) {
                $(".button").attr("class", "kkk");
            }
        }

    });
    $(".b-btn").on("click", ".kkk", function() {
        if (num > 0) {
            num--;
            $(".banner>img").eq(num).animate({ "opacity": "1" }, 500);
            if (num == 0) {
                $(".kkk").attr("class", 'button');
            }
        }
    })
})